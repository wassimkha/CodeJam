{
  "manifest_version": 2,
  "permissions": [
    "https://api.openai.com/*"
  ],
  "name": "Answer Qs",
  "description": "This extension will answer any question you highlight",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "/Assets/communication.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}